package oo.heranca;

public class Jogador {
	
	int x;
	int y;
	
	boolean andar(Direcao direcao) {
		if(direcao == Direcao.Norte && y >= 0) {
			y--;
		}else if ( direcao == Direcao.Leste && x >= 0) {
			x++;
		}else if(direcao == Direcao.Sul && y >= 0) {
			y++;
		}else if(direcao == Direcao.Oeste && x >=0) {
			x--;
		}
		
	
	return true;
	}
}
